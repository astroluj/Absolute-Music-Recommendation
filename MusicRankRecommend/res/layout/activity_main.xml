<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100" >

        <ImageButton
            android:id="@+id/naver_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:adjustViewBounds="true"
            android:background="@null"
            android:onClick="naverClick"
            android:scaleType="centerInside"
            android:src="@drawable/naver_button_selector" />

        <ImageButton
            android:id="@+id/billboard_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:adjustViewBounds="true"
            android:background="@null"
            android:onClick="billboardClick"
            android:scaleType="centerInside"
            android:src="@drawable/billboard_button_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100" >

        <ImageButton
            android:id="@+id/itunes_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:adjustViewBounds="true"
            android:background="@null"
            android:onClick="itunesClick"
            android:scaleType="centerInside"
            android:src="@drawable/itunes_button_selector" />

        <ImageButton
            android:id="@+id/gaon_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:adjustViewBounds="true"
            android:background="@null"
            android:onClick="gaonClick"
            android:scaleType="centerInside"
            android:src="@drawable/gaon_button_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="100" >

        <ImageButton
            android:id="@+id/mnet_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:adjustViewBounds="true"
            android:background="@null"
            android:onClick="mnetClick"
            android:scaleType="centerInside"
            android:src="@drawable/mnet_button_selector" />
    </LinearLayout>

</LinearLayout>